<% if (title) { %>
 <h1><%= title %></h1>
<% } else { 
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
 <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
 </ul>
<% } %>

<h2>Welcome, <%= locals.accountData.account_firstname %> <%= locals.accountData.account_lastname %>!</h2>
<p>You're logged in.</p>

<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <h3><a href="/inv/">Inventory Management</a></h3>
<% } %>

<a href="/account/edit/<%= locals.accountData.account_id %>">Edit Account Information</a>